{
  "name": "nextjs-ssr-kit",
  "version": "6.0.2",
  "description": "A fullstack MERN SSR boilerplate.",
  "repository": "https://github.com/mattcarlotta/nextjs-ssr-kit",
  "author": "Matt Carlotta",
  "license": "MIT",
  "private": false,
  "scripts": {
    "analyze": "rimraf .next/analyze && analyze=true npm run build",
    "build": "npm run build:api && concurrently --success first --kill-others \"npm run start:api\" \"npm run build:app\"",
    "build:api": "rimraf build && tsc --p ./api/tsconfig.prod.json",
    "build:app": "inStaging=false next build",
    "build:stage": "NODE_ENV=production inStaging=true next build",
    "build:staging": "npm run seed:prod && npm run build:api && concurrently --success first --kill-others \"npm run start:apistage\" \"npm run build:stage\"",
    "dev": "concurrently  \"npm run dev:api\" \"npm run dev:app\"",
    "dev:app": "NODE_OPTIONS='--max_old_space_size=4096 --inspect' NODE_ENV=development next dev",
    "dev:api": "NODE_ENV=development nodemon --config ./api/nodemon.json",
    "drop:dev": "NODE_ENV=development EXIT=true DROP=true ts-node --project ./api/tsconfig.json -r tsconfig-paths/register ./api/database/teardownDB/index.ts",
    "drop:prod": "NODE_ENV=production EXIT=true DROP=true ts-node --project ./api/tsconfig.json -r tsconfig-paths/register ./api/database/teardownDB/index.ts",
    "drop:stage": "NODE_ENV=staging EXIT=true DROP=true ts-node --project ./api/tsconfig.json -r tsconfig-paths/register ./api/database/teardownDB/index.ts",
    "lint": "eslint -c ./.eslintrc --ignore-path ./.eslintignore ./src --ext .ts,.tsx",
    "lint:api": "eslint -c ./api/.eslintrc --ignore-path ./api/.eslintignore ./api --ext .ts,.tsx",
    "lint:styles": "stylelint **/*.scss",
    "seed:dev": "NODE_ENV=development EXIT=true SEED=true ts-node --project ./api/tsconfig.json -r tsconfig-paths/register ./api/database/seedDB/index.ts",
    "seed:prod": "NODE_ENV=production EXIT=true SEED=true ts-node --project ./api/tsconfig.json -r tsconfig-paths/register ./api/database/seedDB/index.ts",
    "seed:stage": "NODE_ENV=staging EXIT=true SEED=true ts-node --project ./api/tsconfig.json -r tsconfig-paths/register ./api/database/seedDB/index.ts",
    "start": "npm run start:api & npm run start:app",
    "start:api": "NODE_ENV=production node -r ./api/prod-paths.js build/api/server.js",
    "start:apistage": "NODE_ENV=production inStaging=true node -r ./api/prod-paths.js build/api/server.js",
    "start:app": "NODE_ENV=production next start",
    "start:staging": "npm run start:apistage & npm run staging",
    "staging": "NODE_ENV=production inStaging=true next start",
    "test": "NODE_ENV=test jest --config ./jest.json --passWithNoTests",
    "test:api": "NODE_ENV=test jest --config ./api/jest.json --passWithNoTests",
    "test:apicov": "NODE_ENV=test jest --config ./api/jest.json --coverage",
    "test:apiwatch": "NODE_ENV=test jest --config ./api/jest.json --watchAll",
    "test:cov": "NODE_ENV=test jest --config ./jest.json --coverage",
    "test:e2e": "NODE_ENV=staging cypress open --project ./e2e",
    "test:e2erun": "npm run build:staging && concurrently --success first --kill-others \"npm run start:staging\" \"NODE_ENV=production cypress run --config video=false --project ./e2e\"",
    "test:failed": "NODE_ENV=test jest --config ./jest.json --watch --onlyFailures",
    "test:prod": "npm run build:prod && npm run start",
    "test:stage": "NODE_ENV=production inStaging=true next build && npm run staging",
    "test:watch": "NODE_ENV=test jest --config ./jest.json --watch --onlyChanged",
    "test:watchall": "NODE_ENV=test jest --config ./jest.json --watchAll"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "npm run lint:api",
      "npm run test",
      "npm run test:api"
    ],
    "*.scss": [
      "npm run lint:styles"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "axios": "^0.21.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash.get": "^4.4.2",
    "lodash.isempty": "^4.4.0",
    "mongoose": "^5.10.9",
    "morgan": "^1.10.0",
    "next": "^9.5.5",
    "next-redux-wrapper": "^6.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "react-redux": "^7.2.1",
    "react-toastify": "^6.0.9",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@types/bluebird": "^3.5.32",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/jsdom": "^16.2.4",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.isempty": "^4.4.6",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "address": "^1.1.2",
    "axios-mock-adapter": "^1.18.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.5.2",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "browserslist": "^4.14.5",
    "concurrently": "^5.3.0",
    "cypress": "^5.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-watch": "^7.0.0",
    "file-loader": "^6.1.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "husky": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.5.2",
    "jest-css-modules-transform": "^4.0.1",
    "jest-emotion": "^10.0.32",
    "jest-enzyme": "^7.1.2",
    "jest-haste-map": "^26.5.2",
    "jest-resolve": "^26.5.2",
    "jsdom": "^16.4.0",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "prop-types": "^15.7.2",
    "react-dev-utils": "^10.2.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-saga-test-plan": "^4.0.0-rc.3",
    "sass": "^1.27.0",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.18.0",
    "supertest": "^5.0.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3",
    "url-loader": "^4.1.1",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpackbar": "^4.0.0"
  }
}
