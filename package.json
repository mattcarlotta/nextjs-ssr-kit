{
  "name": "nextjs-ssr-kit",
  "version": "4.0.0",
  "description": "A fullstack MERN SSR boilerplate.",
  "repository": "https://github.com/mattcarlotta/nextjs-ssr-kit",
  "author": "Matt Carlotta",
  "license": "MIT",
  "private": false,
  "scripts": {
    "analyze:prod": "rimraf .next/analyze && analyze=true npm run build",
    "analyze:stage": "rimraf .next/analyze && analyze=true npm run build:stage",
    "build": "inStaging=false next build",
    "build:stage": "NODE_ENV=production inStaging=true next build",
    "dev": "NODE_OPTIONS='--max_old_space_size=4096 --inspect' NODE_ENV=development next dev",
    "drop:prod": "NODE_ENV=production EXIT=true node ./database/teardownDB/index.js",
    "drop:stage": "NODE_ENV=staging EXIT=true node ./database/teardownDB/index.js",
    "lint": "eslint -c ./.eslintrc --ignore-path ./.eslintignore ./src --ext .ts,.tsx",
    "lint:styles": "stylelint **/*.scss",
    "seed:prod": "NODE_ENV=production EXIT=true node ./database/seedDB/index.js",
    "seed:stage": "NODE_ENV=staging EXIT=true node ./database/seedDB/index.js",
    "start": "NODE_ENV=production next start -p 8080",
    "staging": "NODE_ENV=production inStaging=true next start -p 8080",
    "test": "NODE_ENV=test jest --config ./jest.json --passWithNoTests",
    "test:cov": "NODE_ENV=test jest --config ./jest.json --coverage",
    "test:e2e": "NODE_ENV=staging cypress open --project ./e2e",
    "test:e2erun": "npm run build:stage && concurrently --success first --kill-others \"npm run start\" \"NODE_ENV=production cypress run --config video=false --project ./e2e\"",
    "test:failed": "NODE_ENV=test jest --config ./jest.json --watch --onlyFailures",
    "test:prod": "npm run build:prod && npm run start",
    "test:stage": "NODE_ENV=production inStaging=true next build && npm run staging",
    "test:watch": "NODE_ENV=test jest --config ./jest.json --watch --onlyChanged",
    "test:watchall": "NODE_ENV=test jest --config ./jest.json --watchAll"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint",
      "npm run test"
    ],
    "*.scss": [
      "npm run lint:styles"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "axios": "^0.20.0",
    "bluebird": "^3.7.2",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "lodash.get": "^4.4.2",
    "lodash.isempty": "^4.4.0",
    "mongoose": "^5.10.5",
    "next": "^9.5.3",
    "next-redux-wrapper": "^6.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "react-redux": "^7.2.1",
    "react-toastify": "^6.0.8",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "styled-components": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.13",
    "@types/jsdom": "^16.2.4",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.isempty": "^4.4.6",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/styled-components": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "address": "^1.1.2",
    "autoprefixer": "^9.8.6",
    "axios-mock-adapter": "^1.18.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-styled-components": "^1.11.1",
    "browserslist": "^4.14.2",
    "concurrently": "^5.3.0",
    "cypress": "^5.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "eslint": "^7.9.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-watch": "^7.0.0",
    "file-loader": "^6.1.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "husky": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.4.2",
    "jest-css-modules-transform": "^4.0.1",
    "jest-enzyme": "^7.1.2",
    "jest-haste-map": "^26.3.0",
    "jest-resolve": "^26.4.0",
    "jest-styled-components": "^7.0.2",
    "jsdom": "^16.4.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "prop-types": "^15.7.2",
    "react-dev-utils": "^10.2.1",
    "react-is": "^16.13.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-saga-test-plan": "^4.0.0-rc.3",
    "sass": "^1.26.10",
    "stylelint": "^13.7.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.18.0",
    "typescript": "^4.0.2",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpackbar": "^4.0.0"
  }
}
