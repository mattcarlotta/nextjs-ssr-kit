{
  "name": "nextjs-ssr-kit",
  "version": "7.0.1",
  "description": "A fullstack MERN SSR boilerplate.",
  "repository": "https://github.com/mattcarlotta/nextjs-ssr-kit",
  "author": "Matt Carlotta",
  "license": "MIT",
  "private": false,
  "scripts": {
    "analyze": "rimraf .next/analyze && analyze=true npm run build",
    "build": "npm run build:api && concurrently --success first --kill-others \"npm run start:api\" \"npm run build:app\"",
    "build:api": "rimraf build && tsc --p ./api/tsconfig.prod.json",
    "build:app": "ENV_DEBUG=true ENV_LOAD=.env.prod inStaging=false NODE_OPTIONS='-r snackables' next build",
    "build:stage": "ENV_DEBUG=true ENV_LOAD=.env.prod inStaging=true NODE_OPTIONS='-r snackables' next build",
    "build:staging": "npm run seed:prod && npm run build:api && concurrently --success first --kill-others \"npm run start:apistage\" \"npm run build:stage\"",
    "dev": "concurrently  \"npm run dev:api\" \"npm run dev:app\"",
    "dev:app": "ENV_DEBUG=true ENV_LOAD=.env.dev NODE_OPTIONS='--max_old_space_size=4096 --inspect -r snackables' next dev",
    "dev:api": "nodemon --config ./api/nodemon.json",
    "drop:dev": "ENV_DEBUG=true ENV_LOAD=.env.teardown,.env.dev ts-node --project ./api/tsconfig.json -r tsconfig-paths/register ./api/database/teardownDB/index.ts",
    "drop:prod": "ENV_DEBUG=true ENV_LOAD=.env.teardown,.env.prod ts-node --project ./api/tsconfig.json -r tsconfig-paths/register ./api/database/teardownDB/index.ts",
    "drop:stage": "ENV_DEBUG=true ENV_LOAD=.env.teardown,.env.staging ts-node --project ./api/tsconfig.json -r tsconfig-paths/register ./api/database/teardownDB/index.ts",
    "lint": "eslint -c ./.eslintrc --ignore-path ./.eslintignore ./src --ext .ts,.tsx",
    "lint:api": "eslint -c ./api/.eslintrc --ignore-path ./api/.eslintignore ./api --ext .ts,.tsx",
    "lint:styles": "stylelint **/*.scss",
    "seed:dev": "ENV_DEBUG=true ENV_LOAD=.env.seed,.env.dev ts-node --project ./api/tsconfig.json -r tsconfig-paths/register ./api/database/seedDB/index.ts",
    "seed:prod": "ENV_DEBUG=true ENV_LOAD=.env.seed,.env.prod ts-node --project ./api/tsconfig.json -r tsconfig-paths/register ./api/database/seedDB/index.ts",
    "seed:stage": "ENV_DEBUG=true ENV_LOAD=.env.seed,.env.staging ts-node --project ./api/tsconfig.json -r tsconfig-paths/register ./api/database/seedDB/index.ts",
    "start": "npm run start:api & npm run start:app",
    "start:api": "ENV_DEBUG=true ENV_LOAD=.env.prod node -r ./api/prod-paths.js -r snackables build/api/server.js",
    "start:apistage": "ENV_DEBUG=true ENV_LOAD=.env.staging node -r ./api/prod-paths.js -r snackables build/api/server.js",
    "start:app": "ENV_DEBUG=true ENV_LOAD=.env.prod NODE_OPTIONS='-r snackables' next start",
    "start:staging": "npm run start:apistage & npm run staging",
    "staging": "ENV_DEBUG=true ENV_LOAD=.env.staging NODE_OPTIONS='-r snackables' next start",
    "test": "jest --config ./jest.json --passWithNoTests",
    "test:api": "ENV_DEBUG=true ENV_LOAD=.env.test jest --config ./api/jest.json --passWithNoTests",
    "test:apicov": "ENV_DEBUG=true ENV_LOAD=.env.test jest --config ./api/jest.json --coverage",
    "test:apiwatch": "ENV_DEBUG=true ENV_LOAD=.env.test jest --config ./api/jest.json --watchAll",
    "test:cov": "jest --config ./jest.json --coverage",
    "test:e2e": "cypress open --project ./e2e",
    "test:e2erun": "npm run build:staging && concurrently --success first --kill-others \"npm run start:staging\" \"cypress run --config video=false --project ./e2e\"",
    "test:failed": "jest --config ./jest.json --watch --onlyFailures",
    "test:prod": "npm run build:prod && npm run start",
    "test:stage": "ENV_DEBUG=true ENV_LOAD=.env.staging NODE_OPTIONS='-r snackables' next build && npm run staging",
    "test:watch": "jest --config ./jest.json --watch --onlyChanged",
    "test:watchall": "jest --config ./jest.json --watchAll"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "npm run lint:api",
      "npm run test",
      "npm run test:api"
    ],
    "*.scss": [
      "npm run lint:styles"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@emotion/babel-preset-css-prop": "^11.0.0",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "axios": "^0.21.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lodash.get": "^4.4.2",
    "lodash.isempty": "^4.4.0",
    "mongoose": "^5.11.14",
    "morgan": "^1.10.0",
    "next": "^10.0.6",
    "next-redux-wrapper": "^6.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.1.0",
    "react-redux": "^7.2.2",
    "react-toastify": "^7.0.3",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "snackables": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@emotion/jest": "^11.1.0",
    "@types/bluebird": "^3.5.33",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.9",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/jsdom": "^16.2.6",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.isempty": "^4.4.6",
    "@types/mongoose": "^5.10.3",
    "@types/morgan": "^1.9.2",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.16",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "axios-mock-adapter": "^1.19.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "browserslist": "^4.16.3",
    "concurrently": "^5.3.0",
    "cypress": "^6.4.0",
    "enzyme": "^3.11.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-watch": "^7.0.0",
    "husky": "^4.3.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-css-modules-transform": "^4.2.0",
    "jest-enzyme": "^7.1.2",
    "jsdom": "^16.4.0",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "react-dev-utils": "^11.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-saga-test-plan": "^4.0.1",
    "sass": "^1.32.6",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.18.0",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3",
    "webpack-bundle-analyzer": "^4.4.0"
  }
}
